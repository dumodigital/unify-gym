{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "src/**/*", "next.config.ts"],
  "exclude": ["node_modules"]
}